<% provide(:title, 'Details') %>
<div data-role="page" id="details">
	<div data-role="header">
		<a href="#" data-rel="back" data-transition="flip" class="ui-btn-right closebuttonborder">X</a>
	</div>
	<p id="notice"><%= notice %></p>
	<div class="ui-grid-a">
		<div class="ui-block-a" style="margin: 12px 20px; text-align:left; width: 40px;">
			<a href="<%= user_path(current_user) %>">
				<%= image_tag @dream.user.avatar.url(:thumb), class: "thumbsize" %>
			</a>	
		</div>
		<div class="ui-block-b" style="margin: 12px; text-align: left;">
			<h2><%= @dream.user.name %></h2>
		</div>
	</div>
	<div class="aligndetails">
		<h3><%= @dream.title %>
			<% if @dream.privacy == true %> 
				(<img src='http://s3.amazonaws.com/DW-Assets/icon_lock.png' alt='Private' width="10px"> 
				<small>Private</small>)
			<% end %>
		</h3>
		<p><span class="color-gray">Dreamt: </span><%= time_ago_in_words @dream.created_at %> ago.</p>
		<h4 class="margin-top">
			<% if @dream.nightmare == true %>
				<div class="detailblock">
					<img src='http://s3.amazonaws.com/DW-Assets/icon_nightmare_off.png' width="64px">
					<div>Nightmare</div>
				</div>
			<% end %>
			<% if @dream.lucid == true %>
				<div class="detailblock">
					<img src='http://s3.amazonaws.com/DW-Assets/icon_lucid_off.png' width="64px">
					<div>Lucid</div>
				</div>
			<% end %>
			<% if @dream.recurring == true %>
				<div class="detailblock">
					<img src='http://s3.amazonaws.com/DW-Assets/icon_recurring_off.png' width="64px">
					<div>Recurring</div>
				</div>
			<% end %>
			<% if @dream.fragmented == true %>
				<div class="detailblock">
					<img src='http://s3.amazonaws.com/DW-Assets/icon_fragmented_off.png' width="64px">
					<div>Fragmented</div>
				</div>
			<% end %>
		</h4>
		<% if @dream.emotion != '' %>
			<p class="margin-top clearfix"><span class="color-gray">Emotion upon waking: </span><%= @dream.emotion %></p>
		<% end %>
		<% if @dream.hashtag != '' %>
			<p class="margin-top clearfix"><span class="color-gray">Tags:</span> <%= @dream.hashtag %></p>
		<% end %>
		<div class="margin-top borderbottom"></div>
		<div class="margin-top">Photo by: <%= @dream.imageowner %></div>

		<div>
			500px: <a href="http://500px.com/photo/<%= @image_id %>" target="_blank"><small>http://500px.com/photo/<%= @image_id %></small></a>
		</div>
		<div class="margin-top borderbottom"></div>
		<% if current_user == @dream.user %>
			<div class="margin-top margin-bottom">
				<%= link_to 'Edit', edit_dream_path(@dream), rel: "external" %> |
				<%= link_to 'Delete', @dream, method: :delete, data: {confirm: 'Delete this dream? Are you sure?'} %>
			</div>
		<% end %>
	</div>
</div>