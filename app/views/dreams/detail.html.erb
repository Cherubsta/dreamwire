<% provide(:title, 'Details') %>
<div data-role="page" id="details">
	<div data-role="header">
		<%= link_to 'x', dream_path(@dream), class: "ui-btn-right" %>
	</div>
	<p id="notice"><%= notice %></p>
	<div class="ui-grid-a">
		<div class="ui-block-a" style="width: 20%;">
			<a href="<%= user_path(current_user) %>">
				<%= image_tag @dream.user.avatar.url(:thumb), class: "thumbsize" %>
			</a>	
		</div>
		<div class="ui-block-b">
			<h2><%= @dream.user.name %></h2>
		</div>
	</div>
	<h2><%= @dream.title %></h2>
	<% if @dream.privacy == true %> 
		<div><strong>Private</strong></div>
	<% end %>
	<% if @dream.nightmare  == true %> Nightmare  <% end %>
	<% if @dream.lucid      == true %> Lucid      <% end %>
	<% if @dream.recurring  == true %> Recurring  <% end %>
	<% if @dream.fragmented == true %> Fragmented <% end %>
	<p>Dreamt: <%= time_ago_in_words @dream.created_at %> ago.</p>
	<% if @dream.emotion %>
		<p>Emotion upon waking: <%= @dream.emotion %></p>
	<% end %>
	<% if @dream.hashtag != '' %>
		<p>Tags: <%= @dream.hashtag %></p>
	<% end %>
	<% if current_user == @dream.user %>
		<%= link_to 'Edit', edit_dream_path(@dream), rel: "external" %> |
		<%= link_to 'Delete', @dream, method: :delete, data: { confirm: 'Delete this dream? Are you sure?' } %>
	<% end %>
</div>