<% provide(:title, 'DreamView') %>
<p id="notice"><%= notice %></p>
<h2>
  <%= @dream.user.name %>
</h2>
<h2>
	<%= @dream.title %>
</h2>
<% if @dream.privacy == true %> 
	<div>
		<strong>Private</strong>
	</div>
<% end %>
<p>
  <%= @dream.content %>
</p>

<% if URI(request.referer).path.split('/').last == "detail" %>
  <%= link_to "Back", root_path %> |
<% elsif URI(request.referer).path.split('/').last == "edit" %>
	<%= link_to "Back", root_path %> |
<% else %>
  <%= link_to 'Back', :back %> |
<% end %>

<%= link_to 'Details', {:controller => "dreams", :action => "detail", :id => @dream } %>