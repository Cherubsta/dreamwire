<% provide(:title, 'dreamwire - wake up, and discover your dreams') %>

<script type="text/javascript">
	$.fn.cycle.defaults.autostop = 5;
	// $.fn.cycle.defaults.fit = 0;
	// $.fn.cycle.defaults.cssAfter = null;
	// $.fn.cycle.defaults.cssBefore = null;
	$(function() {
	  // run the code in the markup!
	  $('code').each(function() {
	    eval($(this).text());
	  });
	});
	$('#s1').cycle({
		fx: 'fade',
		pause: 1,
		delay: 1000
	});
	$('#s2').cycle({
		fx: 'fade',
		pause: 1,
		delay: 23000
	});
	$('#s3').cycle({
		fx: 'fade',
		pause: 1,
		delay: 16000
	});
	$('#s4').cycle({
		fx: 'fade',
		pause: 1,
		delay: 6000
	});
</script>

