<% provide(:title, 'Sign In') %>
<div data-role="page" data-url="/signin/"> 
	<div class="background-image">
		<a href="<%= home_path %>">
			<img src='http://s3.amazonaws.com/DW-Assets/landing-logo-blue.png' alt='dreamwire' class="logosize margin-top">
		</a>
		<p class="color-blue">
			wake up, and discover your dreams
		</p>
		<% if flash[:error] %>
	    <div class="alert"><%= flash[:error] %></div>
	  <% end %>
		<%= form_for(:session, url: sessions_path) do |f| %>
			<div class="margin-top">
			<div class="magic">
				<%=	f.text_field :username_or_email, placeholder: "username or email", autofocus: true, style: "padding: 0;"%>
			</div>
			</div>
			<div class="ui-grid-a" style="width: 285px; margin: 0 auto;">
				<div class="ui-block-a" style="width: 192px; overflow: hidden;">
					<%=	f.password_field :password, placeholder: "password", style: "border-bottom: 1px dotted #FBA617; border-radius: 0;" %>
					<div class="alignleft">
						<small><%= link_to "Reset Password?", new_password_reset_path %></small>
					</div>
				</div>
				<div class="ui-block-b" style="width: 83px; margin-left: 8px;">
					<%=	f.submit "Sign In", rel: "external"%>
				</div>
			</div>
			<div class="margin-top">New dreamer? <%= link_to "Sign up Â»", signup_path %></div>
		<% end %>
	</div>
</div>