<% provide(:title, 'Sign In') %>

<%= link_to 'Dreamwire', root_path %>

<h1>Sign In</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
	
	<%=	f.label :email %>
	<%=	f.text_field :email %>

	<%=	f.label :password %>
	<%=	f.password_field :password %>

	<%=	f.submit "Sign In", class: "btn btn-primary" %>

	<p> New user? <%= link_to "Sign up now!", signup_path %> </p>
<% end %>