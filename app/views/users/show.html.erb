<% provide(:title, @user.name) %>
<%= link_to 'Dreamwire', root_path %> | 
<%= link_to 'Settings', edit_user_path(current_user) %> |
<a href='../posts/new'>New Dream</a> |
<a href='../posts/feed'>LiveWire</a> |
<%= link_to "Sign Out", signout_path, method: "delete" %>

<div class="row">
	<aside class="span4">
		<a href="<%= user_path(current_user) %>">
			<%= image_tag @user.avatar.url(:thumb) %>
		</a>
		<h1>	
			<%= @user.name %>
		</h1>
	</aside>
	<div class="span8">
		<% if @user.posts.any? %>
			<h4> <%= pluralize(@user.posts.count, "Dream") %> </h4>
			<ol class="posts">
				<%= render @user.posts %>
			</ol>	
		<% else %>
			<%= render 'layouts/welcome' %>	
		<% end %>	
	</div>
</div>