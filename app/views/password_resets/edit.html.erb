<% provide(:title, 'Password Change') %>
<div data-role="page">
	<a href="<%= home_path %>">
		<img src='http://s3.amazonaws.com/DW-Assets/landing-logo-blue.png' alt='dreamwire' class="logosize margin-top">
	</a>
	<%= render 'shared/error_messages', object: @user %>
	<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
		<p class="color-orange">Change your password here:</p>
	  <div class="ui-grid-a" style="width: 320px; margin: 0px auto;">
  		<div class="ui-block-a">
	  		<%= f.password_field :password, :placeholder => "Enter a new password", style: "border: 1px dotted #FBA617; width: 214px; border-radius: 0; padding-left: 4px;" %>
	  	</div>
	  	<div class="ui-block-b" style="width: 70px; margin-left: 70px;">
				<%= f.submit "Go" %>
			</div>
		</div>
	<% end %>
</div>